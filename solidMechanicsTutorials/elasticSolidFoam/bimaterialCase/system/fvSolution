solvers
{
	U
	{
	    solver          PCG;
	    preconditioner  DIC;
    	    tolerance       1e-08;
    	    relTol          0.1;
	}
}

stressedFoam
{
    nCorrectors     5000;
    U               1e-07;

    divSigmaExp     decompose;

    solidInterface  yes;
}


