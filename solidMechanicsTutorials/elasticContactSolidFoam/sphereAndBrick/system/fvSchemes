FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default     steadyState;
//    default     Euler;
}

ddtSchemes
{
    default     Euler;
}


divSchemes
{
    default         none;
    div(sigma)      Gauss linear;
}

gradSchemes
{
    default extendedLeastSquares 0;
}

laplacianSchemes
{
    default Gauss linear corrected;
}


