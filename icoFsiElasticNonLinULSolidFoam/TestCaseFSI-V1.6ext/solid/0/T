FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
dimensions      [0 0 0 1 0 0 0];
internalField   uniform 400;
boundaryField
{
    tail            
    {
        type            oscillatingFixedValue;
        refValue        uniform 400;
        amplitude       100;
        frequency       2;
    }
    tailFixed           
    {
        type            fixedValue;
        value           uniform 400;
    }
    frontAndBackPlanes
    {
    	type		empty;
    }
}
